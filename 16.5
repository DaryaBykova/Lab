#include <stdio.h>
#include <stdlib.h>
int main()
{
    int n;
    printf("Введите размер массива N(N>1): ");
    scanf("%i",&n);
    int a[n];
    for (int i=0; i<n; i++)
    {
        a[i]= - 15 + rand()%30;
        printf("%d\t", a[i]);
    }
    printf("\n");
    
    for (int i=0; i<n; i+=2)
    {
        printf("%i\t",a[i]);
    }
    for (int i=n-(n%2)-1; i>=1; i-=2)
    {
        printf("%i\t",a[i]);
    }
    return 0;
}
