#include <stdio.h>
#include <math.h>
int main()
{
    int k, n;
    printf("Определим номер дня недели для К-го дня года. Введите К (1<=K<=365): ");
    scanf("%d", &k);
    printf("Введите номер дня недели N(1<=N<=7), соответствующий номеру дня недели 1-го января этого года: ");
    scanf("%d", &n);
    int k1=(k+n-1)-floor(k/7)*7;
    if (k1==0)
    {
        k1=7;
    }
    printf("Номер дня недели для К-го дня года: %d", k1);
}
