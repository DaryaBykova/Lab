#include <stdio.h>
#include <math.h>
int main()
{
    int a, b1, f2, c3, d4;
    printf ("Проверим истинность высказывания «Данное число читается одинаково слева направо и справа налево»\n");
    printf ("Введите целое четырехзначное число: ");
    scanf("%d", &a);
    b1=floor(a/1000);
    f2=floor((a%1000)/100);
    c3=floor((a%100)/10);
    d4=a%10;
    if ((b1==d4)&&(f2==c3))
    {
        printf("Высказывание истинно.");
    }
    else 
    {
        printf("Высказывание ложно.");
    }
}
