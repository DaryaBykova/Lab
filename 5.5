#include <stdio.h>
#include <math.h>
#define _CRT_SECURE_NO_WARNINGS_
int main()
{
    float x1, y1, x2, y2, x3, y3;
    printf("Введите координаты вершины A:\n");
    scanf("%f %f", &x1, &y1);
    printf("Введите координаты вершины B:\n");
    scanf("%f %f", &x2, &y2);
    printf("Введите координаты вершины C:\n");
    scanf("%f %f", &x3, &y3);
    float a, b, c;
    a=sqrt((x2-x1)*(x2-x1)+(y2-y1)*(y2-y1));
    b=sqrt((x3-x2)*(x3-x2)+(y3-y2)*(y3-y2));
    c=sqrt((x1-x3)*(x1-x3)+(y1-y3)*(y1-y3));
    float P, p, S;
    if (((x1==x2)&&(x2==x3))||((y1==y2)&&(y2==y3)))
    {
        printf("Треугольник с вершинами в заданных точках не существует.");
    }
    else
    {
        P=a+b+c;
        p=P/2;
        S=sqrt(p*(p-a)*(p-b)*(p-c));
        printf("Периметр треугольника=%f, площадь треугольника=%f", P, S);
    }
}
