#include <stdio.h>
int main ()
{
    int a, a1, b, i=0, s1=0, s;
    printf("Введите два целых положительных числа А и В(А>B): ");
    scanf("%d %d", &a, &b);
    a1=a;
    while (a>b)
    {
        a=a-b;
        i++;
    }
    for (int k=0; k<i; k++)
    {
        s1=s1+b;
    }
    s=a1-s1;
    printf("Остаток от отрезка А после наложения на него %d отрезков В: %d", i, s);
}
