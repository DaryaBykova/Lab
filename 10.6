#include <stdio.h>
int main()
{
    float a, b, c;
    printf("Проверим, является ли треугольник  прямоугольным. Введите длины его сторон: ");
    scanf("%f %f %f", &a, &b, &c);
    if ((a<(b+c))&&(b<(a+c))&&(c<(a+b)))
    {
        if ((a*a==b*b+c*c)||(b*b==a*a+c*c)||(c*c==a*a+b*b))
        {
            printf("Треугольник является прямоугольным.");
        }
        else
        {
            printf("Треугольник не является прямоугольным.");
        }
    }
    else
    {
        printf("Треугольник не существует.");
    }
}
