#include <stdio.h>
int main()
{
    int n, A, D;
    printf("Введите размер массива N(N>1): ");
    scanf("%i",&n);
    printf("Введите первый член последовательности A: ");
    scanf("%i",&A);
    printf("Введите знаменатель последовательности D: ");
    scanf("%i",&D);
    int a[n];
    for (int i = 0; i < n; i++)
    {
        a[i] = A;
        A *= D;
    }
    for (int i=0; i<n; ++i) 
    {
        printf("%i : %i\n",i,a[i]);
    }
    return 0;
}
