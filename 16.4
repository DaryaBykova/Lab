#include <stdio.h>
#include <stdlib.h>
int main()
{
    int n;
    printf("Введите размер массива N(N>1): ");
    scanf("%i",&n);
    int a[n];
    for (int i=0; i<n; i++)
    {
        a[i]= - 15 + rand()%30;
        printf("%d\t", a[i]);
    }
    printf("\n");
    int d=0, f=1;
    for (int i = 0; i < n; i++)
    {
        if (i % 2 == 0)
        {
            printf("%d\t", a[d]);
            d++;
        }
        else
        {
            printf("%d\t", a[n-f]);
            f++;
        }
    }
    return 0;
}
