#include <stdio.h>
int main()
{
    printf("Введите значение угла в градусах: " );
    float x;
    scanf("%f", &x);
    if ((x>=0)&&(x<=360))
    {
        float p=x/180*3.14;
        printf("В данном угле %g радиан", p);
    }
    else
    {
        printf("Введено некорректное значение угла!");
    }
return 0;
}
