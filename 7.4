#include <stdio.h>
int main()
{
    float v1, v2, s, t;
    printf("Введите скорость первого автомобиля: ");
    scanf("%f", &v1);
    printf("Введите скорость второго автомобиля: ");
    scanf("%f", &v2);
    printf("Введите расстояние между автомобилями: ");
    scanf("%f", &s);
    printf("Введите количество часов: ");
    scanf("%f", &t);
    float s2=s+v1*t+v2*t;
    printf("Расстояние между автомобилями через %g часов: %g", t, s2);
}
