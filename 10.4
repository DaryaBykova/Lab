#include <stdio.h>
#include <math.h>
int main()
{
    int a, b1, c2, d3;
    printf ("Проверим истинность высказывания «Цифры данного числа образуют возрастающую или убывающую последовательность»\n");
    printf ("Введите целое трехзначное число: ");
    scanf("%d", &a);
    b1=floor(a/100);
    c2=floor((a%100)/10);
    d3=a%10;
    if (((b1<c2)&&(c2<d3))||((b1>c2)&&(c2>d3)))
    {
        printf("Высказывание истинно.");
    }
    else 
    {
        printf("Высказывание ложно.");
    }
}
